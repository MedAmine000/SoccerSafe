# ⚽ SoccerSafe - Configuration Environment
# Copiez ce fichier vers .env et adaptez les valeurs

# === CASSANDRA DATABASE ===
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=football_injuries
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=
CASSANDRA_DATACENTER=datacenter1

# === APIs EXTERNES ===
# Football API (RapidAPI)
API_FOOTBALL_KEY=your_rapidapi_key_here

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your_openweather_key_here

# === APPLICATION ===
DEBUG=True
LOG_LEVEL=INFO
STREAMLIT_SERVER_PORT=8501

# === MACHINE LEARNING ===
ML_MODEL_PATH=models/injury_predictor.pkl
ML_RETRAIN_INTERVAL=7  # days
ML_MIN_SAMPLES=1000

# === SÉCURITÉ ===
# Clés de chiffrement (générez des vraies clés en production)
SECRET_KEY=change-me-in-production
API_RATE_LIMIT=100  # requêtes par minute